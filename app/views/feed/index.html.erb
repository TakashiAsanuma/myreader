<header>
  <div class="utility">
    <div class="container">
      <div class="row end-xs">
        <div class="col-xs-6">
          <div class="box">
            <nav>
              <ul>
                <li><%= link_to "#{current_user.email}", "/config" %></li>
                <li><%= link_to "News Top", "/feed" %></li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<nav>
  <div class="container">
    <channel>
    <ul>
      <% @myreads.each do |myread| %>
        <li>|&nbsp;<%= link_to "#{myread.channel_name}", "/feed?channel_id=#{myread.channel_id}" %>&nbsp;</li>
      <% end %>
      <li>|<li>
    </ul>
    </channel>
  </div>
</nav>

<main>
  <div class="container">
<% @feeds.each do |feed| %>
  <article>
  <dl>
    <% if feed.title? %>
      <dt><%= link_to "#{feed.title}", "#{feed.url}",:target => "_blank" %></dt>
      <dd><time datatime= <%= feed.published_at.in_time_zone('Tokyo').strftime("%Y-%m-%d") %>>
      <%= feed.published_at.in_time_zone('Tokyo').strftime("%Y-%m-%d %H:%M") %></time>
      &nbsp;&nbsp;
      <%= feed.site_name %></dd>
      <dd><%= feed.summary %> </dd>
    <% end %>
  </dl>
  </article>
<% end %>
  </div>
</main>
